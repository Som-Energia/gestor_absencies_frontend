// Theming
:root {
    --mdc-theme-primary: #aec122;
    --mdc-theme-secondary: #aec122;
    --mdc-theme-error: #dd4433;
    --mdc-theme-on-error: #ffa;
}

.mdc-fab {
position: fixed;
bottom: 1rem;
right: 1rem;
}

h2, h3 {
    font-weight: 500;
}

hr {
margin-left: 0px;
margin-right: 0px;
}

.mdc-layout-grid {
    margin-left: 0px;
    margin-right: 0px;
    padding-left: 0px;
    padding-right: 0px;
}

body {
    background-color: #f4f4f4;
    font-family: Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif;
    font-size: 14px;
    min-height: 100%;
    display: flex;
    flex-direction: column;
    margin: 0;
}

.mdc-card {
    position: relative;
    margin: .5rem 0 1rem 0;
    background-color: #fff;
    transition: box-shadow .25s;
    border-radius: 5px;
    margin-top: 0;
    margin-bottom: 20px;
    box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 3px 1px -2px rgba(0,0,0,0.12), 0 1px 5px 0 rgba(0,0,0,0.2);
    overflow: hidden;
}

.mdc-card__header {
    padding: 24px;
    background-color: var(--mdc-theme-primary);     
    text-align: center;
}

.mdc-card__header h2 {
    margin: 0;
    line-height: 32px;
    font-weight: 500;
}

.mdc-card__content {
    padding: 0 24px 24px;    
}

